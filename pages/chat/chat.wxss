/* pages/chat/chat.wxss */
page{
  background-color:  #F3F3F3
}

.button-hover {
  background-color: gray;
  opacity: 0.7;
}


.send, .reply{
  display: flex;
  flex-direction: row;
  margin: 10px;
}

.send{
  justify-content: flex-end;
}

.rob_photo{
width: 80rpx;
height: 80rpx;

}

.send_text,.reply_text{
  margin-left:10px;
  margin-right:10px;
  padding: 10px;
  color:black;
  border-radius: 5px
}

.send_text{
  background-color: #A2E563;
}

.reply_text{
  background-color: #FFFFFF;
  max-width: 500rpx;
}

.sendMsg{
  display:flex;
  position: fixed;
  bottom: 0;
  margin: 10px;
  margin-left:30rpx;
  padding: 5px;
  background: #cff0da;
  border-radius: 5px;
  width:650rpx;
  height:75rpx;
}

.inputMsg{
  background-color:#FFFFFF;
  width: 500rpx;
  height: 70rpx;
  border-radius: 5px;
  
}

.sendBtn{
  background-color: #3ac569;
  color: #FFFFFF;
  height:70rpx;
  width:130rpx;
  font-size:14px;
  margin-left:5px;
}